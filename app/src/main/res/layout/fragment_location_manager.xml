<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LocationManagerFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:paddingLeft="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="8dp"
        android:textSize="22dp"
        android:id="@+id/tv_desc_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_car_location"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:layout_below="@id/tv_desc_location"
        android:text="Aberdeen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Online"
        android:paddingTop="18dp"
        android:textSize="22dp"
        android:id="@+id/tv_desc_last_online"
        android:paddingLeft="18dp"
        android:layout_below="@id/tv_car_location"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingTop="8dp"
        android:id="@+id/tv_car_last_online"
        android:text="2014-12-12 20:20:18:1222"
        android:layout_below="@id/tv_desc_last_online"/>
     <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="300dp"/>
    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOn="Car Monitor On"
        android:textOff="Car Monitor Off"
        android:layout_above="@id/map"/>


</RelativeLayout>
